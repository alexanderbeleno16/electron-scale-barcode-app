{
  "name": "electron-scale-barcode-app",
  "version": "1.0.0",
  "description": "Electron app with React/TS for scale and barcode reader",
  "main": "dist-main/main.js",
  "author": "Alexander Bele√±o",
  "scripts": {
    "dev": "concurrently \"npm run dev:electron\" \"npm run dev:react\"",
    "dev:electron": "tsc && electron dist-main/main.js",
    "dev:react": "vite",
    "build": "tsc && vite build",
    "build:electron": "electron-builder",
    "preview": "vite preview"
  },
  "build": {
    "appId": "com.detector_v1.electronscaleapp",
    "productName": "Detector v1.0",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist-main/**/*",
      "dist/**/*",
      "package.json"
    ],
    "win": {
      "target": "portable"
    }
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^32.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.8.3",
    "vite": "^4.5.3"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "serialport": "^12.0.0"
  }
}
